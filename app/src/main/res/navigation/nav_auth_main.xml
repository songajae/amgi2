<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_auth_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.songajae.amgi.ui.splash.SplashFragment"
        android:label="Splash">
        <action android:id="@+id/action_splash_to_login" app:destination="@id/loginFragment"/>
        <action android:id="@+id/action_splash_to_signup" app:destination="@id/signupFragment"/>
        <action android:id="@+id/action_splash_to_home" app:destination="@id/homeFragment"/>
        <action android:id="@+id/action_splash_to_deviceManage" app:destination="@id/deviceManageDialogFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.songajae.amgi.ui.auth.LoginFragment"
        android:label="Login">
        <action android:id="@+id/action_login_to_home" app:destination="@id/homeFragment"/>
        <action android:id="@+id/action_login_to_signup" app:destination="@id/signupFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.songajae.amgi.ui.auth.SignupFragment"
        android:label="Signup">
        <action android:id="@+id/action_signup_to_login" app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.songajae.amgi.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_deviceManageDialogFragment"
            app:destination="@id/deviceManageDialogFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <dialog
        android:id="@+id/deviceManageDialogFragment"
        android:name="com.songajae.amgi.ui.device.DeviceManageDialogFragment"
        android:label="DeviceManage"/>
</navigation>
